{
  "name": "lighthouse-accessibility-dashboard",
  "version": "1.0.0",
  "description": "Lighthouse accessibility testing dashboard",
  "scripts": {
    "serve": "npm run copy-assets && npm-run-all --parallel serve:watch serve:sync",
    "serve:watch": "nodemon --watch src/assets --ext css,png,jpg,js --exec \"cp src/assets/* dist/\"",
    "serve:sync": "browser-sync start --server dist --files 'dist/*.html,dist/*.css,dist/*.js'",
    "copy-assets": "cp src/assets/* dist/"
  },
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5"
  }
}
